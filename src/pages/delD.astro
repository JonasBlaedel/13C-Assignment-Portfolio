</MainLayout>

<style>
    .container {
        display: grid;
        grid-template-columns:repeat(auto-fit, minmax(300px, 1fr));        
        grid-template-rows: auto;
        gap: var(--small-spacing);
        max-width: 1500px;
        margin: auto;
    }

    .card{
        padding: var(--small-spacing) 1.5rem;
        overflow-y:hidden ;
        background-color: var(--secondary-color);
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        gap: var(--small-spacing);
    }

    .card:first-child, .card:last-child{
        grid-column: span 2;
        background-color: var(--primary-color);
        > .desc{
        font-size: var(--h5-font-size);
        line-height: 1.25;

        
        }
    }

    
    .profile{
        border-radius: 50px;
    }
    
    .card:nth-child(odd) .profile{
        width: 6rem;
    }
    .card:nth-child(even) .profile{
        width: 5rem;
    }
    
    .employee{
        display: flex;
        gap: var(--small-spacing);
        align-items: center;
    }
    
    .title{
        opacity: 0.7;
    }
    
    .personal{
        opacity: 0.7;
    }
    
.card:nth-child(3){
    grid-row: span 2;
    background-color: var(--accent-color);
    >.desc{
    font-size: var(--h5-font-size);
    line-height: 1.25;
    }
    > .employee{
        flex-direction: column;
        align-items: start;
        .profile{
            width: 8rem;
            border-radius: 50%;
        } 
    }   
}

@media (width < 1300px){
    .container{
        grid-template-columns:repeat(auto-fit, minmax(500px, 1fr));        

}
}

@media (width < 1000px){
    .container{
        display: grid;
        grid-template-columns:1fr;        
        max-width: 800px;
       }

       .card:first-child, .card:last-child{
        grid-column: span 1;
        background-color: var(--primary-color);
        > .desc{
        font-size: initial;
        line-height: initial;
        }
    }

    .card:nth-child(3){
    >.desc{
    font-size: initial;
    line-height: initial;
    }
    > .employee{
        flex-direction: row;
        align-items: center;
    }   
}

.profile{
    width: 5rem !important;
}
}
</style>